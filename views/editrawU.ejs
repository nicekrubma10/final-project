  <body style="font-family: 'Prompt', sans-serif; font-size: 14px;">
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-8 mx-auto" >
              <a href="/productU">
                <button type="button" class="btn btn-outline-primary" style="font-family: 'Prompt', sans-serif; font-size: 14px;">กลับ</button>
                </button>
              </a>                         
              <br>
              <br>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/rawU">วัตถุดิบ</a></li>
                  <li class="breadcrumb-item active" aria-current="page">แก้ไขข้อมูลวัตถุดิบ</li>
                </ol>
              </nav>
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                    <i class="mdi mdi-border-color"></i>
                    <h1 style="font-family: 'Prompt', sans-serif; font-size: 18px;">แก้ไขข้อมูลวัตถุดิบ</h1>
                  </div>
                </div>
                <form action="raws/updateU" method="POST" class="pt-3">
                  <div class="form-group">
                    <label for="rawId">Product ID</label>
                    <input type="text" class="form-control form-control-lg" id="update_id" name="update_id" value="<%= raw?._id %>" 
                           style="font-family: 'Prompt', sans-serif; font-size: 14px;" readonly>
                  </div>                            
                  <div class="form-group">
                    <label for="rawname">ชื่อวัตถุดิบ</label>
                    <input type="text" class="form-control form-control-lg" id="rawname" name="rawname" value="<%= raw?.rawname %>" style="font-family: 'Prompt', sans-serif; font-size: 14px;">
                  </div>
                  <div class="form-group">
                    <label for="rawquantity">จำนวนคงเหลือ</label>
                    <input type="text" class="form-control form-control-lg" id="rawquantity" name="rawquantity" value="<%= raw?.rawquantity %>"
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;">
                  </div>     
                  <div class="form-group">
                    <label for="rawunit">หน่วยนับ</label>
                    <select class="form-control form-control-lg" id="rawunit" name="rawunit"
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;">
                      <% rawTypes.forEach(rawunit => { %>
                        <option value="<%= rawunit %>"><%= rawunit %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="rawunitprice">ราคาต่อหน่วย ฿</label>
                    <input type="text" class="form-control form-control-lg" id=" rawunitprice" name=" rawunitprice" value="<%= raw?.rawunitprice %>"
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;">
                  </div>  
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Update</button>
                  </div>
                </form>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
